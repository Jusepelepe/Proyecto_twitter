<%= form_with(model: tweet, local: true) do |form| %>
<div class="container">

  <% if tweet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(tweet.errors.count, "error") %> prohibited this tweet from being saved:</h2>

      <ul>
      <% tweet.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field mt-3">
    <%= form.label :content, "En que piensas #{current_user.username}?" %>
    <%= form.text_area :content, id: :tweet_content, class: 'form-control shadow' %>
  </div>

  <div class="actions text-right my-2">
    <%= form.submit 'Tweetear', class: 'btn btn-secondary shadow' %>
  </div>
<% end %>
</div>
